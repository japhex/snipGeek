<h1>Login</h1>

<% form_for @user_session, :url => "/user_sessions/" do |f| %>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
	<div>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, :class => 'remember-me' %>
  </div>
  <p><%= f.submit "Submit" %></p>
<% end %>
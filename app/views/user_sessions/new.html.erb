<div id="login">
	<h1>Login</h1>
	<% form_for @user_session, :url => "/user_sessions/" do |f| %>
	<% if @user_session.errors.any? %>
	  <div id="error_explanation">
	    <h2><%= pluralize(@user_session.errors.count, "error") %> stopped you from logging in dude..</h2>
	    <ul>
	    <% @user_session.errors.full_messages.each do |msg| %>
	      <li>- <%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>
	  <p>
	    <%= f.label :username %>
	    <%= f.text_field :username %>
	  </p>
	  <p>
	    <%= f.label :password %>
	    <%= f.password_field :password %>
	  </p>
		<div>
	    <%= f.check_box :remember_me %>
	    <%= f.label :remember_me, :class => 'remember-me' %>
	  </div>
	  <p><%= f.submit "Submit" %></p>
	<% end %>
</div>
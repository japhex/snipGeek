<!DOCTYPE html>
<html>
<head>
  <title>snipGeek | Organise yourself bro</title>
	<link href='http://fonts.googleapis.com/css?family=Kreon|Podkova|Crushed' rel='stylesheet' type='text/css' />
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>	
  <%= javascript_include_tag "prettify.js" %>
	<%= csrf_meta_tag %>
</head>
<body onload="prettyPrint()">
	<div id="wrapper">
		<section id="sticky-bar">
			<ul>
			  <% if current_user %>
					<li id="add-snip"><a href="#">+ SNiP</a></li>
					<%= render "snips/newsnip" %>			    
					<li id="logout" class="auth">
						<%= link_to "Logout", logout_path %>
						<%= link_to "Edit Profile", edit_user_path(:current), :class => "edit-profile" %>
			  	</li>
				<% else %>
			    <li id="login" class="auth">
						<%= link_to "Register", new_user_path %>
			    	<%= link_to "Login", login_path, :class => "login-user" %>
			  	</li>
				<% end %>			
			</ul>
		</section>
	</div>
	<section id="snips">
		<%= yield %>					
	</section>
	<section id="overlay">
	</section>
	<section id="overlay-content">
	</section>
</body>
</html>
